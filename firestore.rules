rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection rules
    match /users/{userId} {
      // Allow users to read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to read other users' profiles (for admin functionality)
      allow read: if request.auth != null;
    }
    
    // Videos collection rules
    match /videos/{videoId} {
      // Allow all authenticated users to read videos
      allow read: if request.auth != null;
      
      // Only admin users can write/update/delete videos
      allow write: if request.auth != null && 
        resource.data.userType == 'Admin' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'Admin';
    }
    
    // Gallery collection rules (if you have one)
    match /gallery/{photoId} {
      // Allow all authenticated users to read gallery
      allow read: if request.auth != null;
      
      // Only admin users can write/update/delete gallery items
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'Admin';
    }
    
    // Notifications collection rules
    match /notifications/{notificationId} {
      // Allow all authenticated users to read notifications
      allow read: if request.auth != null;
      
      // Only admin users can create notifications
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'Admin';
    }
    
    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}